/* بِسْمِ اللهِ الرَّحْمنِ الرَّحِیم */

{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "preserveSymlinks": false,
    "composite": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@layouts/*": ["src/@layouts/*"],
      "@layouts": ["src/@layouts"],
      "@core/*": ["src/@core/*"],
      "@core": ["src/@core"],
      "@shared/*": ["src/@shared/*"],
      "@shared": ["src/@shared"]
    }
  }
}
